    'video/x-quicktime',
    'image/mov',
    'audio/aiff',
    'audio/x-midi',
    'audio/x-wav',
    'video/avi',
    // *.mp4 files
    'video/mp4v-es',
    'audio/mp4',
    // *.m4v files
    'video/mp4v-es',
